@model List<OwnerStats>

@{
    ViewData["Title"] = "Standings";
}


<table class="table" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td>Owner</td>
        <td>Wins</td>
        <td>Losses</td>
        <td>Streak</td>
        <td>Total Points</td>
    </tr>
    @foreach (var ownerStats in Model)
    {
        byte[] bytes = (byte[])ownerStats.OwnerLogo;
        string base64String = Convert.ToBase64String(bytes, 0, bytes.Length);
        var logoSource = "data:image/png;base64," + base64String;

        <tr>
            <td style="line-height:0;padding:5px;margin:5px;width:65px;height:75px;"><img style="display:block;width:100%;height:100%;padding:0px;margin:0px 0px 0px 0px;vertical-align: middle;" src=@logoSource /></td>
            <td>@ownerStats.Wins</td>
            <td>@ownerStats.Losses</td>
            <td>@ownerStats.Streak</td>
            <td>@ownerStats.TotalPoints.ToString("0.00")</td>
        </tr>
    }
</table>