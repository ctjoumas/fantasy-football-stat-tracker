@model List<OwnerStats>

@{
    ViewData["Title"] = "Standings";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />

<style>
    h2 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

<h2 class='text-center'>Standings</h2>

<br />

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-condensed">
                <tr class="active">
                    <td>Owner</td>
                    <td>Wins</td>
                    <td>Losses</td>
                    <td>Streak</td>
                    <td>Total Points</td>
                </tr>
                @foreach (var ownerStats in Model)
                {
                    byte[] bytes = (byte[])ownerStats.OwnerLogo;
                    string base64String = Convert.ToBase64String(bytes, 0, bytes.Length);
                    var logoSource = "data:image/png;base64," + base64String;

                    <tr>
                        <td style="line-height: 0; padding: 15px; margin: 5px; width: 90px; height: 90px; vertical-align: middle;"><img class="img-responsive" style="padding:0px;margin:0px 0px 0px 0px" src=@logoSource /></td>
                        <td style="vertical-align: middle">@ownerStats.Wins</td>
                        <td style="vertical-align: middle">@ownerStats.Losses</td>
                        <td style="vertical-align: middle">@ownerStats.Streak</td>
                        <td style="vertical-align: middle">@ownerStats.TotalPoints.ToString("0.00")</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>